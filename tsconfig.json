{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "module": "commonjs",
    "lib": ["dom"],
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./dist",
    "outDir": "./dist/",
    "jsx": "react",
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "test"]
}
